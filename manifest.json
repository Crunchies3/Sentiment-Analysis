{
  "manifest_version": 3,
  "name": "Sentiment Analysis",
  "version": "1.0",
  "description": "Analyze the highlighted text.",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "inline_sentiment/script.js"
      ],
      "css": [
        "inline_sentiment/styles.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
